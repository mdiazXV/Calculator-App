@page
@model CalculatorModel
@{
    ViewData["Title"] = "Calculator Page";
}

<div class="text-center">
    <h1 class="display-4">Calculator</h1>
    <form id="result" onclick ="result.value=inputName.value+inputVal.value">
    <a>Enter a number: </a><input type="number" name="inputName" ></input><br><br>
    <a>Enter second number:</a><input type="number" name="inputVal"></input>
    <button type="button">Enter</button><br>
    </form>
    <a>Output:</a> <output form="result" name ="result"></output>
    <div class="table">
        <div class="title">
            <a>Calculator</a>
        </div>
        <div class="row">
            <div class="column">
            <input type="button" name="button7" value="7">
            <input type="button" name="button8" value="8">
            <input type="button" name="button9" value="9">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="column">
                <input type="button" name="button4" value="4">
                <input type="button" name="button5" value="5">
                <input type="button" name="button6" value="6">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="column">
                <input type="button" name="button1" value="1">
                <input type="button" name="button2" value="2">
                <input type="button" name="button3" value="3">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="column">
                <input type="button" name="button0" value="0">
            </div>
        </div>
        <br>
        
    </div>
    
</div>
